---
import Menu from '../components/Menu.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="stylesheet" href="style/base.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col h-full">
        <header class="container py-12 mb-9">
            <div class="flex justify-between gap-6 items-center">
                <h1 class="text-3xl font-bold text-black">Ton Lamper</h1>

                <Menu />
            </div>
        </header>
        <main class="container flex-grow">
		    <slot />
        </main>
        <footer class="py-6 mt-3 border-t border-t-gray-300">
            <div class="container mx-auto text-xs text-black">
                &copy; {new Date().getFullYear()} Ton Lamper. All rights reserved.
            </div>
        </footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}
	html {
		font-family: system-ui, sans-serif;
        @apply h-full;
	}

    body {
        @apply h-full text-gray-500 leading-7;
    }
</style>
