---
import Header from '../components/Header.astro'
import { ViewTransitions } from 'astro:transitions'
import '../../style/base.css'
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="nl">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Ton Lamper is kunstenaar en docent. Zijn grafisch werk is een combinatie van diverse technieken zoals: de lijnets, kleurenets, kartondruk, linoleumsnede en houtsnede."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="flex h-full flex-col">
		<Header />
		<main class="container flex-grow">
			<slot />
		</main>
		<footer class="mt-12 border-t border-t-gray-300 py-6">
			<div class="container mx-auto text-xs text-black">
				&copy; {new Date().getFullYear()} Ton Lamper. All rights reserved.
			</div>
		</footer>
	</body>
</html>
