{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@data/*": ["src/data/*"],
			"@layouts/*": ["src/layouts/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		},
		"jsx": "preserve",
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	}
}
